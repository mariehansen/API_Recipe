<!-- Array of all available filter types -->
<% let filterTypes=["Vegetarian", "Beef" ,"Chicken","Lamb","Pork","Seafood", "Vegan" , "Pasta" , "Starter" , "Side"
    , "Breakfast" , "Dessert" , "Miscellaneous" ]; %>

    <body>
        <div class="px-4 py-5 my-5 text-center">
            <h1 class="display-5 fw-bold text-body-emphasis py-4">
                Recipies
            </h1>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center py-2">
                <!-- First button to find random recipie -->
                <a href="/random"><button type="button" class="btn btn-primary btn-lg px-4 gap-3">Random</button></a>
            </div>
            <% filterTypes.forEach(type=> { %>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center py-2">
                    <!-- Multipe buttons for each filter -->
                    <form action="/filter" method="POST"><input type="hidden" name="filter" value="<%=type%>"><button
                            type="button sumbit" class="btn btn-primary btn-lg px-4 gap-3">
                            <%=type%>
                        </button></form>
                </div>
                <% }); %>
        </div>
    </body>
</html>
